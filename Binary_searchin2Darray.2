class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) 
    {
        int rowindex=0;
        int colindex=matrix[0].size()-1;

        while(rowindex<matrix.size()&&colindex>=0)
        {
            int element=matrix[rowindex][colindex];
            if(element==target)
            {
                return true;
            }
            if(element<target)
            {
                rowindex++;
            }
            else
            {
                colindex--;
            }

        }
        
        return false;
    }
};
