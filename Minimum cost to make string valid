#include <bits/stdc++.h> 
int findMinimumCost(string str) 
{
  int n=str.size();
  if(n%2==1)
  {
    return -1;
  }

  stack<char> st;

  for(int i=0;i<n;i++)
  {
    if(str[i]=='{')
    {
      st.push(str[i]);
    }
    else
    {
      if(!st.empty()&&st.top()=='{')
      {
        st.pop();
      }
      else
      {
        st.push(str[i]);
      }
    }
  }

  int a=0;
  int b=0;

  while(!st.empty())
  {
    if(st.top()=='{')
    {
      a++;
    }
    else
    {
      b++;
    }
    st.pop();
  }
  int ans=(a+1)/2 + (b+1)/2;
  return ans;
}
