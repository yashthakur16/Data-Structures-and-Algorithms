#include<iostream>
using namespace std;

int peak(int arr[],int n)
{
    int s=0;
    int e=n-1;
    int mid=s+((e-s)/2);

    while(s<e)
    {
        if(arr[mid]<arr[mid+1])
        {
            s=mid+1;
        }
        
        else
        {
            e=mid-1;
        }

        mid=s+((e-s)/2);

    }
    return arr[mid];
}

int main()
{
    int arr[10]={2,3,4,5,8,9,4,3,2,1};
    cout<<"Peak is "<<peak(arr,10);
    
}
